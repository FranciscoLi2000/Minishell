# Makefile for Simple Minishell
# Author: your_login

NAME = simple_minishell

CC = gcc
CFLAGS = -Wall -Wextra -Werror

# Source files
SRC = simple_minishell.c
OBJ = $(SRC:.c=.o)

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re